<h1>Editing Book</h1>
<%= render "layouts/error",msg: @book %>

<%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :opinion %>
  <%= f.text_area :body %>
  <%= f.submit "Update Book" %>
<% end %>

<%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>